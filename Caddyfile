{
    # Global options
    admin off  # Disable admin interface
    auto_https disable_redirects  # Prevent double redirects
    # Trust Cloudflare's IPs
    servers {
        trusted_proxies static private_ranges cloudflare
        protocols h1 h2
    }
}

# Replace with your subdomain, e.g., api.yourdomain.com
:80 {
    # Enable compression
    encode zstd gzip

    # Security headers
    header {
        # Disable FLoC tracking
        Permissions-Policy "interest-cohort=()"
        # XSS protection
        X-XSS-Protection "1; mode=block"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
        # Frame options - adjusted to allow Cloudflare
        X-Frame-Options "SAMEORIGIN"
        # Remove Server header
        -Server
        # Allow Cloudflare to cache
        Cache-Control "public, max-age=3600"
    }

    # Reverse proxy to WhatsApp API
    reverse_proxy whatsapp-api:8080 {
        # Health checks
        health_uri /
        health_interval 30s
        health_timeout 5s
        health_status 200

        # Proxy headers for Cloudflare
        header_up X-Real-IP {http.request.header.CF-Connecting-IP}
        header_up X-Forwarded-For {http.request.header.CF-Connecting-IP}
        header_up X-Forwarded-Proto {http.request.header.X-Forwarded-Proto}
        header_up Host {host}
    }

    # Access logging
    log {
        output file /var/log/caddy/access.log
        format json {
            time_format iso8601
            message_key message
            level_key level
            fields {
                request>real_ip {http.request.header.CF-Connecting-IP}
                request>country {http.request.header.CF-IPCountry}
                request>user_agent {http.request.header.User-Agent}
            }
        }
    }
} 