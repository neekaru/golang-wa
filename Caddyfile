{
    # Global options
    admin off
    # Enable automatic HTTPS
    email admin@yourdomain.com  # Replace with your email
}

# Replace with your subdomain, e.g., api.yourdomain.com
:80 {
    # Enable compression
    encode zstd gzip

    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Disable FLoC tracking
        Permissions-Policy "interest-cohort=()"
        # XSS protection
        X-XSS-Protection "1; mode=block"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
        # Frame options
        X-Frame-Options "DENY"
        # Remove Server header
        -Server
    }

    # Reverse proxy to WhatsApp API
    reverse_proxy whatsapp-api:8080 {
        # Health checks
        health_uri /
        health_interval 30s
        health_timeout 5s
        health_status 200

        # Standard proxy headers
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
        header_up Host {host}
    }

    # Access logging
    log {
        output file /var/log/caddy/access.log
        format json {
            time_format iso8601
            message_key message
            level_key level
            fields {
                request>remote_ip {remote_host}
                request>user_agent {request.header.User-Agent}
                request>real_ip {http.request.header.CF-Connecting-IP}
                request>country {http.request.header.CF-IPCountry}
                request>user_agent {http.request.header.User-Agent}
            }
        }
    }
} 